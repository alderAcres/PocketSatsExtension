{
  "name": "PocketSats",
  "description": "A Chrome Extension that allows users to convert the price in USD to Satoshis (the smlalest unit of Bitcoin).",
  "version": "1.1.2",
  "manifest_version": 2,
  "icons": {
    "16": "./icons/pocket-sats-logo.png",
    "32": "./icons/pocket-sats-logo.png",
    "48": "./icons/pocket-sats-logo.png",
    "128": "./icons/pocket-sats-logo.png"
  },
  "background": {
    "scripts": ["./background.js", "./popup.js"]
  },
  "browser_action": {
    "default_icon": "./icons/pocket-sats-logo.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/",
    "activeTab"
  ]
}
